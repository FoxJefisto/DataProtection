<Window x:Class="TestApp.InputSectionNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="Ввод имени раздела реестра" MinHeight="200" MinWidth="300" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#FF093054">
    <Grid Background="#FF1268BD" Margin="15">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя раздела реестра" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="tbSectionName" Width="160" Margin="0,0,0,10"/>
            <Button x:Name="btnNext" Margin="20,0,20,10" 
                    Foreground="White" Background="#FF093054"
                    Content="Далее" Padding="20,0" IsDefault="True"
                    Click="btnNext_Click"/>
            <TextBlock x:Name="tbAnswer" HorizontalAlignment="Center" Foreground="Red" TextWrapping="Wrap" FontSize="8"/>
        </StackPanel>
    </Grid>
</Window>
